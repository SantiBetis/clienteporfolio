const email = "santiago.perez.olivares.16@gmail.com";
const year = new Date().getFullYear();
---

<div class="min-h-screen flex flex-col">
  <!-- Contenido principal de la página -->
  <main class="flex-grow">
    <!-- Aquí va tu contenido principal -->
  </main>

  <!-- Footer -->
  <footer class="bg-[#0B5E4F] text-[#e8e5d7] py-8">
    <!-- Curva superior del footer -->
    <div class="absolute top-0 left-0 w-full h-12 bg-[#e8e5d7] rounded-b-full z-10"></div>

    <!-- Contenido principal del footer -->
    <div class="flex flex-col md:flex-row justify-between items-center max-w-7xl mx-auto px-6">
      <!-- Texto del email y copyright -->
      <p class="text-sm md:text-base">
        © {year} {email}
      </p>

      <!-- Íconos de GitHub y LinkedIn -->
      <div class="flex space-x-4 mt-4 md:mt-0">
        <!-- Ícono de GitHub -->
        <a href="https://github.com" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
          <img src="/public/github.png" alt="GitHub" class="w-8 h-8 hover:scale-110 transition-transform" />
        </a>
        <!-- Ícono de LinkedIn -->
        <a href="https://linkedin.com" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
          <img src="/public/linkedin.png" alt="LinkedIn" class="w-8 h-8 hover:scale-110 transition-transform" />
        </a>
      </div>
    </div>
  </footer>
</div>
