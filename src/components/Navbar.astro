---
const { navbar } = Astro.props;
---

<script>
  let isScrolled = false;

  // Detectamos el scroll
  window.onscroll = function () {
    const navbarElement = document.getElementById('navbar');
    console.log('Navbar element:', navbarElement); // Verifica si el elemento es encontrado
    // Verificamos si el elemento existe antes de manipularlo
    if (navbarElement) {
      console.log('Scroll Y:', window.scrollY); // Verifica la posiciÃ³n del scroll
      if (window.scrollY > 50) {
        isScrolled = true;
      } else {
        isScrolled = false;
      }
      // Cambiamos el fondo de la navbar si el scroll es mayor a 50
      navbarElement.classList.toggle('bg-gray-600', isScrolled);
    }
  };
</script>

